<Controller>:
    spacing: "30px"

    BoxLayout:
        id: players 
        orientation: "vertical"
        size_hint: (.3,1)

    BoxLayout:
        orientation: "vertical"
        size_hint: (.7,1)

        Label:
            text: root.playername 
            size_hint: (1,0.1)
            font_size: 25
        AsyncImage:
            id: albumart
            source: root.albumart
            size_hint: (1,0.5)
        Label:
            text: root.currenttrack 
            size_hint: (1,0.1)
            font_size: 20
            halign: "center"
        Slider:
            id: playervolume 
            orientation: "horizontal"
            min: 0
            max: 100
            steps: 1
            disabled: True
            value: 0
            on_value: root.volumechanged(*args)
            on_touch_down: root.volumeslider_touch_down(*args)
            on_touch_up: root.volumeslider_touch_up(*args)
            size_hint: (1,0.1)
        Button:
            id: playButton
            on_press: root.play()
            text: root.playerstatus 
            disabled: True
            size_hint: (1,0.2)
